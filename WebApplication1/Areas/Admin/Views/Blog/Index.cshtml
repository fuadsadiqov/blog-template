@model IEnumerable<GP.Application.BlogQueries.BlogResponse>

<div class="album w-100 bg-body-tertiary">
    <div class="container">
        <div class="d-flex justify-content-between">
            <h4>Bloqlar</h4>
            <a class="btn btn-success" asp-controller="Blog" asp-action="Add">Add</a>
        </div>
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Created Date</th>
                <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var blog in Model)
            {

            <tr>
                <td>@blog.Name</td>
                <td>@blog.Date</td>
                <td>
                    <a asp-controller="Blog" asp-action="Edit" asp-route-id="@blog.Id" class="btn btn-primary">Edit</a>
                    <a onclick="areYouSure()" asp-controller="Blog" asp-action="Delete" asp-route-id="@blog.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
            }
            </tbody>
        </table>
    </div>
</div>

<script>
    function areYouSure(){
        var result = confirm("Are you sure delete this blog?");
        if (result)
        {
            return true;
        }
    }
</script>