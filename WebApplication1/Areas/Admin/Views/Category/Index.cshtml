
@using GP.Application.CategoryQueries
@model IEnumerable<CategoryResponse>

<div class="album w-100 bg-body-tertiary">
    <div class="container">
        <div class="d-flex justify-content-between">
            <h4>Kateqoriyalar</h4>
            <a class="btn btn-success" asp-controller="Category" asp-action="Add">Add</a>
        </div>
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Created Date</th>
                <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var category in Model)
            {

                <tr>
                    <td>@category.Title</td>
                    <td>@category.Date</td>
                    <td>
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary">Edit</a>
                        <a onclick="areYouSure()" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

<script>
    function areYouSure(){
        var result = confirm("Are you sure delete this category");
        if (result)
        {
            return true; 
        }
    }
</script>