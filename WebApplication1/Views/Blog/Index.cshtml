
@using GP.Application.BlogQueries
@model IEnumerable<BlogResponse>

<div class="album py-5 bg-body-tertiary">
    <div class="container">

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach (var blog in Model)
            {
                <a href="Blog/Detail?id=@blog.Id" class="col">
                    <div class="card shadow-sm">
                        <div class="bd-placeholder-img card-img-top w-100" style="height: 225px;">
                            <img src="@blog.Image" class="w-100 h-100" style="object-fit:cover;" />
                        </div>
                        <div class="card-body">
                            <h6 class="card-title">@blog.Name</h6>
                            <p class="card-text">@blog.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <small class="text-sm">@blog.Category</small>
                                </div>
                                <small class="text-body-secondary">@blog.ViewCount</small>
                            </div>
                        </div>
                    </div>
                </a>
            }
        </div>
    </div>
</div>
